<div class="container"> <h3>Random Card</h3></div>
<div class="container random-card">
  <% if (locals.data) { %>
    <div class="card" style="width: 18rem;">
      <% if (data.image_uris && data.image_uris.small) { %>
        <img src="<%= data.image_uris.small %>" class="random-card" alt="<%= data.name %>">
      <% } %>
      <div class="card-body">
        <% if (data.name) { %>
          <h5 class="card-title"><%= data.name %></h5>
        <% } %>
        <% if (data.description) { %>
          <p class="card-text"><%= data.description %></p>
        <% } %>
      </div>
      <ul class="list-group list-group-flush card-body">
          <% if (data.prices && data.prices.usd > 0) { %> 
        <li class="list-group-item card-body">Price:<%= data.prices.usd %>$</li>
             <% } %>
           <% if (data.rarity) { %> 
        <li class="list-group-item card-body">Rarity: <%= data.rarity %></li>
             <% } %>
                 <% if (data.artist) { %> 
        <li class="list-group-item card-body">Artist: <%= data.artist %></li>
             <% } %>
      </ul>
      <div class="card-body">
           <% if (data.related_uris.gatherer) { %> 
        <a href="<%= data.related_uris.gatherer %>" class="card-link">More info</a>
                 <% } %>
                     <% if (data.purchase_uris.cardmarket) { %> 
        <a href="<%= data.purchase_uris.cardmarket %> " class="card-link">Buy now</a>
           <% } %>
      </div>
    </div>
  <% } else { %>
    <p>No cards available</p>
  <% } %>
</div>
